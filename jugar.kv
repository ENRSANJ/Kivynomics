#: import CournotInput cournot


<JugarVentana>:
    name: 'JugarScreen'

    # BoxLayout con ttodo el contenido de la pantalla
    BoxLayout:
        padding: '5dp'
        spacing: '5dp'

        # Parte izquierda de la pantalla
        BoxLayout:
            orientation: 'vertical'
            padding: '10dp'
            # Datos cuantitativos
            BoxLayout:
                orientation: 'vertical'
                size_hint: (.55, .25)

                canvas.before:
                    Color:
                        rgba: mainbtcolor
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos

                # Función de demanda del mercado
                WrappedLabel:
                    text: 'Demanda del mercado: p(x) = ' + root.demanda_mercado
                    font_size: self.height * .35

                # Costes totales de la empresa del jugador
                WrappedLabel:
                    text: 'Costes totales: ' + root.costes_totales
                    font_size: self.height * .35

            # Narrativa del juego
            BoxLayout:
                orientation: 'vertical'

                WrappedLabel:
                    size_hint: (.5, .5)
                    text: 'Etapa: ' + str(root.stage)

                WrappedLabel:
                    text: root.modelo

                WrappedLabel:
                    text: root.narrativa

            # Tu decisión
            BoxLayout:
                padding: '10dp'
                size_hint: (.8, .15)
                canvas.before:
                    Color:
                        rgba: mainbtcolor
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos

                Label:
                    text: 'Tu decisión: '
                    font_size: self.height * .4

                CournotInput:
                    id: respuesta
                    font_size: self.height * .4
                    size_hint: (.5, 1)
                    pos_hint: {'center_x': .5, 'center_y': .5}

                WrappedLabel:
                    text: '   uds/€'
                    halign: 'left'
                    font_size: self.height * .4

                HoverButton3:
                    text: 'Confirmar'
                    font_size: self.height * .4
                    on_release: root.confirma()
                    canvas.before:
                        Color:
                            rgba: secondarybtcolor
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size

        # Parte derecha de la pantalla
        BoxLayout:
            padding: '5dp'

            size_hint: (.43, .9)
            pos_hint: {'top': 1}
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: mainbtcolor
                RoundedRectangle:
                    size: self.size
                    pos: self.pos

            # NPC
            BoxLayout:
                padding: '5dp'
                orientation: 'vertical'

                size_hint: (.8, .7)
                pos_hint: {'center_x': .5}

                Image:
                    source: root.imagen

                # Comentario del NPC
                WrappedLabel:
                    size_hint: (1, .4)
                    text: root.comentario

            # Historial
            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'HISTORIAL'

                Label:
                    text: root.stage1

                Label:
                    text: root.stage2

                Label:
                    text: root.stage3
                    font_size: self.height * .2


<SelectPlayer>:
    size_hint: (.5, .5)
    title: "Selecciona un rival"
    auto_dismiss: False

    BoxLayout:

        # Botones de selección de NPC
        BoxLayout:
            orientation: "vertical"

            Button:
                text: "John Forbes Nash"
                on_release: root.selection1()

            Button:
                text: "Adam Smith"
                on_release: root.selection2()


            Button:
                text: "Karl Marx"
                on_release: root.selection3()

        # Información sobre NPC
        BoxLayout:
            orientation: "vertical"

            Label:
                text: "John Forbes Nash"

            Label:
                text: "Adam Smith"


            Label:
                text: "Karl Marx"


<ResetGame>:
    size_hint: (.5, .5)
    title: "El juego ha finalizado"
    auto_dismiss: False

    # Selección de acción al terminar la partida
    BoxLayout:
        orientation: "vertical"

        Button:
            text: 'Volver a jugar'
            on_release: app.root.ids.jugarid.inicio_juego(); root.dismiss()

        Button:
            text: 'Menú principal'
            on_release: app.root.transition.direction = 'right'; app.root.current = 'MenuPrincipal'; root.dismiss()


<JugarMasInfoScreen>:
    name: 'JugarMasInfoScreen'
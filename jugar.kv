#: import CournotInput cournot


<JugarVentana>:
    name: 'JugarScreen'

    # BoxLayout con ttodo el contenido de la pantalla
    BoxLayout:
        padding: '5dp'
        spacing: '5dp'

        # Parte izquierda de la pantalla
        BoxLayout:
            orientation: 'vertical'
            padding: '10dp'
            spacing: '10dp'

            # Datos cuantitativos
            BoxLayout:
                orientation: 'vertical'
                size_hint: (.65, .25)
                padding: ('20dp', 0, 0, 0)

                canvas.before:
                    Color:
                        rgba: mainbtcolor
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos

                # Función de demanda del mercado
                WrappedLabel:
                    text: 'Demanda del mercado: p(x) = ' + root.demanda_mercado
                    font_size: self.height * .35
                    halign: 'left'

                # Costes totales de la empresa del jugador
                WrappedLabel:
                    text: 'Costes totales: ' + root.costes_totales
                    font_size: self.height * .35
                    halign: 'left'

            # Narrativa del juego
            BoxLayout:
                orientation: 'vertical'
                spacing: '10dp'

                WrappedLabel:
                    canvas.before:
                        Color:
                            rgba: mainbtcolor
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    size_hint: (.25, .25)
                    text: 'Etapa: ' + str(root.stage)
                    font_size: self.height * .4
                BoxLayout:
                    padding: '10dp'
                    canvas.before:
                        Color:
                            rgba: mainbtcolor
                        Line:
                            width: 2
                            rectangle: (self.x, self.y, self.width, self.height)
                    WrappedLabel:
                        text: root.narrativa
                        font_size: self.height * .1
                        halign: 'justify'

                BoxLayout:
                    padding: '10dp'
                    canvas.before:
                        Color:
                            rgba: mainbtcolor
                        Line:
                            width: 2
                            rectangle: (self.x, self.y, self.width, self.height)
                    WrappedLabel:
                        text: root.modelo
                        font_size: self.height * .1

            # Tu decisión
            BoxLayout:
                padding: '10dp'
                spacing: '10dp'
                size_hint: (.8, .15)
                canvas.before:
                    Color:
                        rgba: mainbtcolor
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos

                Label:
                    text: 'Tu decisión: '
                    font_size: self.height * .4

                CournotInput:
                    id: respuesta
                    font_size: self.height * .4
                    size_hint: (.6, 1)
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    on_text_validate: root.confirma()

                WrappedLabel:
                    text: '   uds/€'
                    halign: 'left'
                    font_size: self.height * .4

                HoverButton3:
                    text: 'Confirmar'
                    font_size: self.height * .4
                    on_release: root.confirma()
                    canvas.before:
                        Color:
                            rgba: secondarybtcolor
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size

                HoverButton3:
                    text: 'Reiniciar'
                    font_size: self.height * .4
                    on_release: root.reiniciar()
                    canvas.before:
                        Color:
                            rgba: secondarybtcolor
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size

        # Parte derecha de la pantalla
        BoxLayout:
            padding: '5dp'

            size_hint: (.43, .9)
            pos_hint: {'top': 1}
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: mainbtcolor
                RoundedRectangle:
                    size: self.size
                    pos: self.pos

            # NPC
            BoxLayout:
                padding: '3dp'
                spacing: '7dp'
                orientation: 'vertical'

                size_hint: (.8, .7)
                pos_hint: {'center_x': .5}

                Image:
                    source: root.imagen

                # Comentario del NPC
                WrappedLabel:
                    size_hint: (1, .4)
                    text: root.comentario
                    font_size: self.height*.25

            # Historial
            BoxLayout:
                orientation: 'vertical'

                WrappedLabel:
                    text: 'HISTORIAL'
                    font_size: self.height*.25

                WrappedLabel:
                    text: root.stage1
                    font_size: self.height*.25

                WrappedLabel:
                    text: root.stage2
                    font_size: self.height*.25

                WrappedLabel:
                    text: root.stage3
                    font_size: self.height*.25


<SelectPlayer>:
    size_hint: (.65, .6)
    auto_dismiss: False

    BoxLayout:
        padding: '5dp'
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: mainbtcolor
            RoundedRectangle:
                size: self.size
                pos: self.pos

        # Título
        BoxLayout:
            size_hint: (1, .2)
            WrappedLabel:
                text: '[u]Selecciona tu rival[/u]'
                markup: True
                font_size: self.height*.4

        BoxLayout:
            padding: '15dp'
            # Botones de selección de NPC
            BoxLayout:
                size_hint: (.8, 1)
                orientation: "vertical"
                spacing: '10dp'
                padding: '5dp'

                CournotButton:
                    text: "John Forbes Nash"
                    on_release: root.selection1()

                CournotButton:
                    text: "Murray Rothbard"
                    on_release: root.selection2()

                CournotButton:
                    text: "Karl Marx"
                    on_release: root.selection3()

            # Separador
            BoxLayout:
                size_hint: (.1, 1)

            # Información sobre NPC
            BoxLayout:
                orientation: "vertical"

                JugarLabel:
                    text: 'Creador de la Teoría de Juegos y conceptos como "equilibrio de Nash". Jugador experimentado y con gran conocimiento que optimizará sus decisiones al máximo'

                JugarLabel:
                    text: 'Considerado padre de la economía. Economista liberal que ignora las actuaciones del Gobierno pues las considera "ineficientes".'

                JugarLabel:
                    text: 'Uno de los filósofos más influyentes de la historia. Sobreestima sus costes un 20% pues no quiere extraer plusvalía de sus trabajadores'


<ResetGame>:
    size_hint: (.4, .6)
    auto_dismiss: False

    BoxLayout:
        padding: '5dp'
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: mainbtcolor
            RoundedRectangle:
                size: self.size
                pos: self.pos

        # Título
        BoxLayout:
            size_hint: (1, .2)
            WrappedLabel:
                text: '[u]El juego ha finalizado[/u]'
                markup: True
                font_size: self.height*.4

        # Selección de acción al terminar la partida
        BoxLayout:
            orientation: "vertical"
            spacing: '10dp'
            padding: '20dp'

            CournotButton:
                text: 'Volver a jugar'
                on_release:
                    app.root.ids.jugarid.reset_parametros()
                    app.root.ids.jugarid.on_enter()
                    root.dismiss()

            CournotButton:
                text: 'Menú principal'
                on_release:
                    app.root.ids.jugarid.reset_parametros()
                    app.root.transition.direction = 'right'
                    app.root.current = 'MenuPrincipal'
                    root.dismiss()

            CournotButton:
                text: 'Exportar resultados'
                on_release:
                    root.exportar_resultados(app.root.ids.jugarid.historial)
                    app.root.ids.jugarid.reset_parametros()
                    app.root.transition.direction = 'right'
                    app.root.current = 'MenuPrincipal'
                    root.dismiss()


<JugarLabel@WrappedLabel>:
    font_size: self.height * .15


<JugarMasInfoScreen>:
    name: 'JugarMasInfoScreen'

    Scroll:
        GridLayout:
            cols: 1
            size_hint_y: None
            height: self.minimum_height + 100
            spacing: '10dp'
            padding: '10dp'

            WrappedLabel2:
                size_hint_x: 1.6
                size_hint_y: None
                halign: 'justify'
                bold: True
                font_size: self.height*.4
                text: 'JUGAR vs NPC'

            WrappedLabel2:
                size_hint_y: None
                height: self.texture_size[1]
                halign: 'justify'
                text: root.a
                bold: True
                font_size: kivy.core.window.Window.height * 0.03

# Pantalla de confirmación de reinicio
<ConfirmationScreen>:
    size_hint: (.3, .23)
    auto_dismiss: False
    BoxLayout:
        spacing: '10dp'
        padding: '10dp'
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: mainbtcolor
            RoundedRectangle:
                size: self.size
                pos: self.pos
        # Título
        BoxLayout:
            size_hint: (1, .2)
            WrappedLabel:
                text: '¿Desea reiniciar la partida?'
        # Selección de opción
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            spacing: '10dp'
            padding: '10dp'

            BoxLayout:
                orientation: 'horizontal'
                size_hint: (None, None)
                size: (self.minimum_width, self.minimum_height)

                MDIconButton:
                    icon: 'check-circle-outline'
                    theme_icon_color: 'Custom'
                    icon_color: (1, 1, 1, 1)
                    icon_size: '64sp'
                    on_release:
                        app.root.ids.jugarid.reset_parametros()
                        app.root.ids.jugarid.on_enter()
                        root.dismiss()

                MDIconButton:
                    icon: 'close-circle-outline'
                    theme_icon_color: 'Custom'
                    icon_color: (1, 1, 1, 1)
                    icon_size: '64sp'
                    on_release:
                        root.dismiss()

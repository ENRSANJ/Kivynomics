#: import CournotInput cournot


<JugarVentana>:
    name: 'JugarScreen'

    # BoxLayout con ttodo el contenido de la pantalla
    BoxLayout:
        padding: '5dp'
        spacing: '5dp'

        # Parte izquierda de la pantalla
        BoxLayout:
            orientation: 'vertical'
            padding: '10dp'
            # Datos cuantitativos
            BoxLayout:
                orientation: 'vertical'
                size_hint: (.55, .25)

                canvas.before:
                    Color:
                        rgba: mainbtcolor
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos

                # Función de demanda del mercado
                WrappedLabel:
                    text: 'Demanda del mercado: p(x) = ' + root.demanda_mercado
                    font_size: self.height * .35

                # Costes totales de la empresa del jugador
                WrappedLabel:
                    text: 'Costes totales: ' + root.costes_totales
                    font_size: self.height * .35

            # Narrativa del juego
            BoxLayout:
                orientation: 'vertical'

                WrappedLabel:
                    size_hint: (.5, .5)
                    text: 'Etapa: ' + str(root.stage)

                WrappedLabel:
                    text: root.modelo

                WrappedLabel:
                    text: root.narrativa

            # Tu decisión
            BoxLayout:
                padding: '10dp'
                size_hint: (.8, .15)
                canvas.before:
                    Color:
                        rgba: mainbtcolor
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos

                Label:
                    text: 'Tu decisión: '
                    font_size: self.height * .4

                CournotInput:
                    id: respuesta
                    font_size: self.height * .4
                    size_hint: (.5, 1)
                    pos_hint: {'center_x': .5, 'center_y': .5}

                WrappedLabel:
                    text: '   uds/€'
                    halign: 'left'
                    font_size: self.height * .4

                HoverButton3:
                    text: 'Confirmar'
                    font_size: self.height * .4
                    on_release: root.confirma()
                    canvas.before:
                        Color:
                            rgba: secondarybtcolor
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size

        # Parte derecha de la pantalla
        BoxLayout:
            padding: '5dp'

            size_hint: (.43, .9)
            pos_hint: {'top': 1}
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: mainbtcolor
                RoundedRectangle:
                    size: self.size
                    pos: self.pos

            # NPC
            BoxLayout:
                padding: '5dp'
                orientation: 'vertical'

                size_hint: (.8, .7)
                pos_hint: {'center_x': .5}

                Image:
                    source: root.imagen

                # Comentario del NPC
                WrappedLabel:
                    size_hint: (1, .4)
                    text: root.comentario

            # Historial
            BoxLayout:
                orientation: 'vertical'

                JugarLabel:
                    text: 'HISTORIAL'

                JugarLabel:
                    text: root.stage1

                JugarLabel:
                    text: root.stage2

                JugarLabel:
                    text: root.stage3


<SelectPlayer>:
    size_hint: (.65, .5)
    auto_dismiss: False

    BoxLayout:
        padding: '5dp'
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: mainbtcolor
            RoundedRectangle:
                size: self.size
                pos: self.pos

        # Título
        BoxLayout:
            size_hint: (1, .2)
            WrappedLabel:
                text: '[u]Selecciona tu rival[/u]'
                markup: True

        BoxLayout:

            # Botones de selección de NPC
            BoxLayout:
                size_hint: (.8, 1)
                orientation: "vertical"
                spacing: '10dp'
                padding: '5dp'

                CournotButton:
                    text: "John Forbes Nash"
                    on_release: root.selection1()

                CournotButton:
                    text: "Adam Smith"
                    on_release: root.selection2()

                CournotButton:
                    text: "Karl Marx"
                    on_release: root.selection3()

            # Separador
            BoxLayout:
                size_hint: (.1, 1)

            # Información sobre NPC
            BoxLayout:
                orientation: "vertical"

                JugarLabel:
                    text: '(Difícil) Creador de la Teoría de Juegos y conceptos como "equilibrio de Nash". Jugador experimentado y con gran conocimiento que optimizará sus decisiones al máximo'

                JugarLabel:
                    text: '(Medio) Considerado padre de la economía. Economista liberal que ignora las actuaciones del Gobierno pues las considera "ineficientes".'

                JugarLabel:
                    text: '(Fácil) Uno de los filósofos más influyentes de la historia. Sobreestima sus costes un 20% pues no quiere extraer plusvalía de sus trabajadores'


<ResetGame>:
    size_hint: (.4, .4)
    auto_dismiss: False

    BoxLayout:
        padding: '5dp'
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: mainbtcolor
            RoundedRectangle:
                size: self.size
                pos: self.pos

        # Título
        BoxLayout:
            size_hint: (1, .2)
            WrappedLabel:
                text: '[u]El juego ha finalizado[/u]'
                markup: True


        # Selección de acción al terminar la partida
        BoxLayout:
            orientation: "vertical"
            spacing: '10dp'
            padding: '5dp'

            CournotButton:
                text: 'Volver a jugar'
                on_release:
                    app.root.ids.jugarid.reset_parametros()
                    app.root.ids.jugarid.on_enter()
                    root.dismiss()

            CournotButton:
                text: 'Menú principal'
                on_release:
                    app.root.ids.jugarid.reset_parametros()
                    app.root.transition.direction = 'right'
                    app.root.current = 'MenuPrincipal'
                    root.dismiss()

            CournotButton:
                text: 'Exportar resultados'
                on_release:
                    root.exportar_resultados(app.root.ids.jugarid.historial)
                    app.root.ids.jugarid.reset_parametros()
                    app.root.transition.direction = 'right'
                    app.root.current = 'MenuPrincipal'
                    root.dismiss()


<JugarLabel@WrappedLabel>:
    font_size: self.height * .15


<JugarMasInfoScreen>:
    name: 'JugarMasInfoScreen'

    Scroll:
        GridLayout:
            cols: 1
            size_hint_y: None
            height: self.minimum_height + 100
            spacing: '10dp'

            WrappedLabel2:
                size_hint_x: 1.6
                size_hint_y: None
                halign: 'center'
                bold: True
                font_size: self.height*.4
                text: 'JUGAR vs NPC'

            WrappedLabel2:
                size_hint_y: None
                height: self.texture_size[1]
                halign: 'left'
                text: root.a
                bold: True
                font_size: kivy.core.window.Window.height * 0.03

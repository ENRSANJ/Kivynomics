#: import CournotInput cournot


<JugarVentana>:
    name: 'JugarScreen'

    # BoxLayout con ttodo el contenido de la pantalla
    BoxLayout:
        padding: '5dp'
        spacing: '5dp'

        # Parte izquierda de la pantalla
        BoxLayout:
            orientation: 'vertical'
            padding: '10dp'
            # Datos cuantitativos
            BoxLayout:
                orientation: 'vertical'
                size_hint: (.55, .25)

                canvas.before:
                    Color:
                        rgba: mainbtcolor
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos

                # Función de demanda del mercado
                WrappedLabel:
                    text: 'Demanda del mercado: p(x) = ' + root.demanda_mercado
                    font_size: self.height * .35

                # Costes totales de la empresa del jugador
                WrappedLabel:
                    text: 'Costes totales: ' + root.costes_totales
                    font_size: self.height * .35

            # Narrativa del juego
            BoxLayout:

                Label:
                    text: root.narrativa

            # Tu decisión
            BoxLayout:
                padding: '10dp'
                size_hint: (.8, .15)
                canvas.before:
                    Color:
                        rgba: mainbtcolor
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos

                Label:
                    text: 'Tu decisión: '
                    font_size: self.height * .4

                CournotInput:
                    id: respuesta
                    font_size: self.height * .4
                    size_hint: (.5, 1)
                    pos_hint: {'center_x': .5, 'center_y': .5}

                WrappedLabel:
                    text: '   uds/€'
                    halign: 'left'
                    font_size: self.height * .4

                HoverButton3:
                    text: 'Confirmar'
                    font_size: self.height * .4
                    on_release: root.confirma()
                    canvas.before:
                        Color:
                            rgba: secondarybtcolor
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size

        # Parte derecha de la pantalla
        BoxLayout:
            padding: '5dp'

            size_hint: (.43, .9)
            pos_hint: {'top': 1}
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: mainbtcolor
                RoundedRectangle:
                    size: self.size
                    pos: self.pos

            # NPC
            BoxLayout:
                padding: '5dp'
                orientation: 'vertical'

                size_hint: (.8, .7)
                pos_hint: {'center_x': .5}

                Image:
                    source: root.imagen

                Label:
                    size_hint: (1, .4)
                    text: 'Te vas a enterar, ¡pedazo de monopolista!'

            # Historial
            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'HISTORIAL'
                Label:
                    text: 'Stage 1'
                Label:
                    text: 'Stage 2'
                WrappedLabel:
                    text: 'Stage 3'
                    font_size: self.height * .2


<SelectPlayer>:
    size_hint: (.5, .5)
    title: "Selecciona un rival"
    auto_dismiss: False

    BoxLayout:
        orientation: "vertical"

        Button:
            text: "John Forbes Nash"
            on_release: root.selection1()

        Button:
            text: "Adam Smith"
            on_release: root.selection2()


        Button:
            text: "Karl Marx"
            on_release: root.selection3()


